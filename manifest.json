{
	"manifest_version": 3,
	"name": "Personal Scraper",
	"version": "1.2",
	"description": "Scrapes the rating and review count from Google Maps business profiles, finds email addresses on the page.",
	"permissions": ["activeTab", "clipboardWrite", "scripting"],
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"exclude_matches": [
				"*://*.youtube.com/*",
				"*://*.facebook.com/*",
				"*://*.twitter.com/*",
				"*://*.x.com/*",
				"*://*.instagram.com/*",
				"*://*.linkedin.com/*",
				"*://*.tiktok.com/*",
				"*://*.pinterest.com/*",

				"*://docs.google.com/*",
				"*://drive.google.com/*",
				"*://sheets.google.com/*",
				"*://slides.google.com/*",
				"*://calendar.google.com/*",
				"*://meet.google.com/*",
				"*://chat.google.com/*",
				"*://mail.google.com/*",
				"*://classroom.google.com/*",
				"*://photos.google.com/*",
				"*://script.google.com/*",

				"*://*.notion.so/*",
				"*://*.slack.com/*",
				"*://*.trello.com/*",
				"*://*.asana.com/*",
				"*://*.airtable.com/*",
				"*://*.monday.com/*",
				"*://*.clickup.com/*",
				"*://*.miro.com/*",
				"*://*.figma.com/*",
				"*://*.claude.ai/*",
				"*://*.chatgpt.com/*",
				"*://*.instantly.ai/*",
				"*://*.cloudways.com/*",
				"*://*.noviamiard.com/*",
				"*://*.beyondvinyasa.com/*",
				"*://*.luxdigital.ca/*",
				"*://*.fryit.co/*",

				"*://*.outlook.com/*",
				"*://*.outlook.office.com/*",
				"*://*.outlook.office365.com/*",
				"*://*.yahoo.com/*",
				"*://*.proton.me/*",
				"*://*.zoho.com/*",

				"*://*.dropbox.com/*",
				"*://*.box.com/*",
				"*://*.onedrive.live.com/*",

				"*://*.zoom.us/*",
				"*://*.teams.microsoft.com/*",
				"*://*.webex.com/*",

				"*://github.com/*",
				"*://gitlab.com/*",
				"*://bitbucket.org/*",
				"*://*.atlassian.com/*",

				"*://*.udemy.com/*",
				"*://*.coursera.org/*",
				"*://*.edx.org/*",
				"*://*.canvas.com/*",
				"*://*.blackboard.com/*",

				"*://*.paypal.com/*",
				"*://*.stripe.com/*",
				"*://*.wise.com/*",

				"*://*.amazon.com/*",
				"*://*.ebay.com/*",
				"*://*.etsy.com/*",
				"*://*.shopify.com/*"
			],
			"js": [
				"helpers/matchesPattern.js",
				"helpers/text.js",
				"helpers/emailFinder.js",
				"helpers/snackbar.js",
				"helpers/copyToClipboard.js",
				"helpers/businessDetails.js",
				"helpers/waitForElement.js",
				"helpers/reviewer.js",
				"content.js"
			],
			"run_at": "document_end"
		}
	],
	"action": {
		"default_title": "Personal Scraper"
	}
}
